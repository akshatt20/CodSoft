<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/blbc"
    tools:context=".QuoteActivity">

    <TextView
        android:id="@+id/quoteTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="135dp"
        android:textSize="18sp"
        android:textColor="@color/black"

        android:hint="Your QUOTE" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/quoteTextView"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:hint="Author"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/authorTextView"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="10dp"
            android:text="Refresh" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginStart="8dp"

            android:text="Share" />

        <Button
            android:id="@+id/favoriteButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/button_back"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"

            android:text="Favorite" />
    </LinearLayout>

    <Button
        android:id="@+id/viewFavoritesButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_back"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="View Favorites" />

</RelativeLayout>
